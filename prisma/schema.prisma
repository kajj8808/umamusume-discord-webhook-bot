generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model MainPickup {
  id          Int      @id @default(autoincrement())
  korea_date  DateTime
  japan_date  DateTime
  description String   @unique
}

model Reward {
  id               Int      @id @default(autoincrement())
  korea_date       DateTime
  japan_date       DateTime
  name             String   @unique
  free_jewel       Int?
  character_ticket Int?
  support_ticket   Int?
  rainbow_piece    Int?
}

model Post {
  id          Int    @id @default(autoincrement())
  title       String @unique
  description String
  image       String
}
